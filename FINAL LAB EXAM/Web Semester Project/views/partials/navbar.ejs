




  <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Landing Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/index.css">
    <%- defineContent('styles') %>
</head>

<div class="container">
    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
      <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
        <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
        <span class="fs-4"><img
            src="/pictures/ramen.jpg" id="pizza-logo">Japanese Restaurant</span>
      </a>

      <ul class="nav nav-pills">
        <li class="nav-item"><a href="/" class="nav-link home">Home</a></li>
        <li class="nav-item"><a href="/register" class="nav-link">Register</a></li>
        <li class="nav-item"><a href="/products" class="nav-link">Products</a></li>
        <li class="nav-item"><a href="/cart" class="nav-link">Cart</a></li>
        <% if(user?.role == "admin") { %>
          <li class="nav-item"><a href="/addproduct" class="nav-link">Add Product</a></li>
          <li class="nav-item"><a href="/deletefood" class="nav-link">Delete Product</a></li>
        <% }%>
        <% if (!user) { %>
        <li class="nav-item"><a href="/login" class="nav-link">Login</a></li>
        <% } else { %>
        <li class="nav-item"><a href="/logout" class="nav-link">Logout</a></li>
        <% } %>
        

      </ul>
    </header>
  </div>

</body>
</html>